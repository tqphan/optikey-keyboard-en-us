<Keyboard>
  <Name>SuperCoolKeyboard</Name>
  <Width>100%</Width>
  <Height>23%</Height>
  <SymbolMargin>12</SymbolMargin>
  <BorderThickness>0,0,0,0</BorderThickness>
  <DockSize>Full</DockSize>
  <Position>Bottom</Position>
  <HorizontalOffset>0</HorizontalOffset>
  <VerticalOffset>0</VerticalOffset>
  <BackgroundColor>#ffffff</BackgroundColor>
  <BorderColor>#ffffff</BorderColor>
  <WindowState>Floating</WindowState>
  <HideFromKeyboardMenu>true</HideFromKeyboardMenu>
  <PersistNewState>false</PersistNewState>
  <Grid>
    <Rows>2</Rows>
    <Cols>14</Cols>
  </Grid>
  <KeyGroup 
    BackgroundColor="#230F18" 
    ForegroundColor="#ffffff" 
    ForegroundOpacity="0.75"
    Name="All" />
  <Content>
    <DynamicKey Row="0" Col="0">
      <Symbol>UpArrowKeyIcon</Symbol>
      <ChangeKeyboard BackReturnsHere="true">mouse-14x1-top</ChangeKeyboard>
    </DynamicKey>
    <DynamicKey Row="0" Col="1">
      <Symbol>ArrowsAllDirectionsIcon</Symbol>    
      <Action>MouseMagneticCursor</Action>
    </DynamicKey>
    <DynamicKey Row="0" Col="2">
      <Symbol>LookToScrollActiveIcon</Symbol>
      <Action>LookToScrollActive</Action>
    </DynamicKey>
    <DynamicKey Row="0" Col="3">
      <Symbol>MouseLeftButtonClickIcon</Symbol>
      <Action>MouseMoveAndLeftClick</Action>
    </DynamicKey>
    <DynamicKey Row="0" Col="4">
      <Symbol>MouseLeftButtonDoubleClickIcon</Symbol>
      <Action>MouseMoveAndLeftDoubleClick</Action>
    </DynamicKey>
    <DynamicKey Row="0" Col="5">
      <Symbol>MouseMoveToPoint</Symbol>
      <Action>MouseMoveTo</Action>
    </DynamicKey>
    <DynamicKey Row="0" Col="6">
      <Symbol>KeyboardIcon</Symbol>
      <ChangeKeyboard BackReturnsHere="true">keyboard-alphabet-14x4-bottom</ChangeKeyboard>
    </DynamicKey>
    <DynamicKey Row="0" Col="7">
      <Symbol>ReplayLastMouseActionIcon</Symbol>
      <Action>RepeatLastMouseAction</Action>
    </DynamicKey>
    <DynamicKey Row="0" Col="8">
      <Symbol>MouseLeftClickDrag</Symbol>
      <Action>MouseDrag</Action>
    </DynamicKey>
    <DynamicKey Row="0" Col="9">
      <Symbol>MouseRightClick</Symbol>
      <Action>MouseMoveAndRightClick</Action>
    </DynamicKey>
    <DynamicKey Row="0" Col="10">
      <Symbol>MouseLeftClickDownUp</Symbol>
      <Action>MouseLeftDownUp</Action>
    </DynamicKey>
    <DynamicKey Row="0" Col="11">
      <Symbol>MouseRightClickDownUp</Symbol>
      <Action>MouseRightDownUp</Action>
    </DynamicKey>
    <DynamicKey Row="0" Col="12">
      <Symbol>MoreIcon</Symbol>
      <ChangeKeyboard BackReturnsHere="true">mouse-14x1-bottom</ChangeKeyboard>
    </DynamicKey>
    <DynamicKey Row="0" Col="13">
      <Symbol>NoIcon</Symbol>
      <ChangeKeyboard BackReturnsHere="true">main-14x1-bottom</ChangeKeyboard>
    </DynamicKey>
    <DynamicKey Row="1" Col="0">
      <Symbol>ShiftKeyIcon</Symbol>
      <KeyToggle>LSHIFT</KeyToggle>
    </DynamicKey>
    <DynamicKey Row="1" Col="1">
      <Symbol>CtrlKeyIcon</Symbol>
      <KeyToggle>LCTRL</KeyToggle>
    </DynamicKey>
    <DynamicKey Row="1" Col="2">
      <Symbol>AltKeyIcon</Symbol>
      <KeyToggle>LMENU</KeyToggle>
    </DynamicKey>
    <DynamicKey Row="1" Col="3">
      <Symbol>WinKeyIcon</Symbol>
      <KeyToggle>LWin</KeyToggle>
    </DynamicKey>
    <!-- change this to right button double click -->
    <DynamicKey Row="1" Col="4">
      <Symbol>MouseRightButtonDoubleClickIcon</Symbol>
      <Action>MouseMoveAndLeftDoubleClick</Action>
    </DynamicKey>
    <DynamicKey Row="1" Col="5">
      <Symbol>ArrowPointingToLeftIcon</Symbol>
      <Action>MouseMoveToLeft</Action>
    </DynamicKey>
    <DynamicKey Row="1" Col="6">
      <Symbol>ArrowPointingToRightIcon</Symbol>
      <Action>MouseMoveToRight</Action>
    </DynamicKey>
    <DynamicKey Row="1" Col="7">
      <Symbol>ArrowPointingToTopIcon</Symbol>
      <Action>MouseMoveToTop</Action>
    </DynamicKey>
    <DynamicKey Row="1" Col="8">
      <Symbol>ArrowPointingToBottomIcon</Symbol>
      <Action>MouseMoveToBottom</Action>
    </DynamicKey>
    <DynamicKey Row="1" Col="9">
      <Symbol>MouseMiddleButtonClickIcon</Symbol>
      <Action>MouseMoveAndMiddleClick</Action>
    </DynamicKey>
    <DynamicKey Row="1" Col="10">
      <Symbol>MouseMiddleButtonDownUpIcon</Symbol>
      <Action>MouseMiddleDownUp</Action>
    </DynamicKey>
    <DynamicKey Row="1" Col="11">
      <Symbol>ZoomToLocationIcon</Symbol>
      <Action>MouseMagnifier</Action>
    </DynamicKey>
        <DynamicKey Row="1" Col="12">
      <Symbol>PandaIcon</Symbol>
      <Action>MouseMoveAmountInPixels</Action>
    </DynamicKey>
    <DynamicKey Row="1" Col="13">
      <Symbol>DolphinIcon</Symbol>
      <Action>MouseScrollAmountInClicks</Action>
    </DynamicKey>
  </Content>
</Keyboard>